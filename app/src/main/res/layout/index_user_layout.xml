<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#e5effb"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/user_header_back"
        android:layout_height="48dp">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_radius"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/pangyou_layout"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="48dp"
                android:src="@drawable/my_pangyou"
                app:riv_oval="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#171718"
                android:layout_marginTop="8.2dp"
                android:text="我的旁友"
                android:includeFontPadding="false"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/sos_layout"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="48dp"
                android:src="@drawable/icon_sos"
                app:riv_oval="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#171718"
                android:includeFontPadding="false"
                android:layout_marginTop="8.2dp"
                android:text="SOS求助"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/credit_layout"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="48dp"
                android:src="@drawable/icon_credit"
                app:riv_oval="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_height="48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#171718"
                android:includeFontPadding="false"
                android:layout_marginTop="8.2dp"
                android:text="信用管理"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
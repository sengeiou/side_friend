<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@+id/img"
                    android:includeFontPadding="false"
                    android:text="名字"
                    android:textColor="#171718"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_alignLeft="@+id/name"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:text="取送快递"
                    android:textColor="#171718"
                    android:textSize="15sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="12dp"
                android:layout_marginLeft="63.33dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/createTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#6f7072"
                    android:textSize="15sp"
                    android:text="接单时间：2018-08-24  11：51" />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6f7072"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:includeFontPadding="false"
                    android:text="结束时间：2018-08-25  06：00" />

                <TextView
                    android:id="@+id/reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#6f7072"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:text="跑腿费：10元" />

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/chatLayout"
                    android:background="@drawable/task_release_btn1"
                    android:layout_height="32dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:text="聊天"
                        android:id="@+id/chat"
                        android:layout_centerInParent="true"
                        android:includeFontPadding="false"
                        android:textColor="#ed6f36"

                        android:layout_height="wrap_content" />
                </RelativeLayout>
                
                
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/finishLayout"
                    android:background="@drawable/task_cancel_btn"
                    android:layout_height="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="15sp"
                        android:id="@+id/finish"
                        android:includeFontPadding="false"
                        android:textColor="#fff4ef"
                        android:text="确认完成"/>
                </RelativeLayout>
                <!--<Button-->
                    <!--android:id="@+id/finish"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:visibility="gone"-->
                    <!--android:text="完成" />-->

                <!--<Button-->
                    <!--android:id="@+id/chat"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:visibility="gone"-->
                    <!--android:text="聊天" />-->
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
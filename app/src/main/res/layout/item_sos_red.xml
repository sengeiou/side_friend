<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:id="@+id/createdAt"
        android:visibility="gone"
        android:textSize="13sp"
        android:textColor="#6f7072"
        android:text="2018-11-19"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:elevation="58dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cat"
                    app:riv_oval="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:text="contact"
                    android:textSize="16sp"
                    android:id="@+id/contact"
                    android:textColor="#171718"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/contactPhone"
                    android:text="contactPhone"
                    android:textColor="#6f7072"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="紧急求助"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:textColor="#ff0000"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:includeFontPadding="false"
                    android:text="事发地址:方法方法付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付付"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="#6f7072"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:id="@+id/address" />
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/splash"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line"
                android:background="#e5effb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/buttons"
                android:gravity="end|center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:id="@+id/handle"
                    android:background="@drawable/sos_saved"
                    android:textColor="#ffffff"
                    android:layout_marginRight="13dp"
                    android:text="已获帮助"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
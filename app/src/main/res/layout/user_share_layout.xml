<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="wrap_content">
   
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#5C9AFD"
                android:layout_height="218dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/icon_share_top"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="26.7dp"
                android:layout_marginRight="26.7dp"
                android:layout_marginTop="36.7dp"
                android:background="@drawable/share_layout"
                android:layout_height="223dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/share_war1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="34dp"
                    android:scaleType="center"
                    android:layout_height="22dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#585858"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:layout_marginTop="42dp"
                    android:text="复制邀请码，粘贴发给好友"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:id="@+id/tv_code"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="133dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:text="复制"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:id="@+id/tv_copy"
                    android:includeFontPadding="false"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/share_copy_btn"
                    android:layout_height="34dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="26.7dp"
                android:layout_marginRight="26.7dp"
                android:layout_marginTop="18.4dp"
                android:background="@drawable/share_layout"
                android:layout_height="175.4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/share_way2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="34dp"
                    android:scaleType="centerCrop"
                    android:layout_height="22dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#585858"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:layout_marginTop="18dp"
                    android:text="点击图标分享到微信"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:id="@+id/layout_wechat"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:scaleType="centerCrop"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_share_wechat_01"/>
                    <ImageView
                        android:layout_width="16.7dp"
                        android:src="@drawable/icon_share_wechat_00"
                        android:layout_height="16.7dp" />
                    <ImageView
                        android:layout_width="40dp"
                        android:scaleType="centerCrop"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_share_wechat_02"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="26.7dp"
                android:layout_marginRight="26.7dp"
                android:layout_marginTop="18.4dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/share_layout"
                android:layout_height="257.7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/icon_share_war_03"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="34dp"
                    android:scaleType="center"
                    android:layout_height="22dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#585858"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:layout_marginTop="18dp"
                    android:text="对方扫描二维码并注册，您即可成为TA的邀请人"
                    android:layout_height="wrap_content" />
                
                <RelativeLayout
                    android:layout_width="67dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_img"
                    android:background="@drawable/code_layout"
                    android:layout_height="67dp">
                    <ImageView
                        android:layout_width="56dp"
                        android:id="@+id/img_code"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"
                        android:layout_height="56dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="133dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:text="保存到手机"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:id="@+id/tv_save"
                    android:includeFontPadding="false"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/share_copy_btn"
                    android:layout_height="34dp" />
            </LinearLayout>
    
        </LinearLayout>

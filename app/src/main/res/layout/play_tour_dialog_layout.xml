<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

   
    
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="139dp">
        
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="match_parent">
            
            
            <RelativeLayout
                android:layout_width="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/top_arrow_layout"
                android:layout_height="25dp">
                <ImageView
                    android:layout_width="9dp"
                    android:src="@drawable/play_arrow2"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:layout_height="9dp" />
            </RelativeLayout>
           
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:includeFontPadding="false"
                android:textColor="#171718"
                android:id="@+id/title_tv"
                android:text="一份肯定，一份感恩"
                android:textSize="16sp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/title_tv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="13dp"
                android:id="@+id/layout"
                android:layout_marginRight="13dp"
                android:background="@drawable/play_tout_dialog_edit"
                android:layout_height="36dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#171718"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="￥"/>
                <EditText
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:numeric="decimal"
                    android:id="@+id/money_ev"
                    android:layout_gravity="center_vertical"
                    android:hint="请输入金额"
                    android:background="@null"
                    android:textSize="10sp"
                    android:textColor="#171718"
                    android:layout_height="match_parent" />
            </LinearLayout>
         
            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/layout"
                android:background="#f1f0f0"
                android:layout_marginTop="14dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/layout"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                
                
                <TextView
                    android:layout_width="0dp"
                    android:textColor="#8c8c8e"
                    android:textSize="15sp"
                    android:text="取消"
                    android:gravity="center"
                    android:id="@+id/cancel_tv"
                    android:layout_height="match_parent" 
                    android:layout_weight="1"/>     
                
                
                <View
                    android:layout_width="1dp"
                    android:background="#f1f0f0"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:textColor="#5fa6fc"
                    android:textSize="15sp"
                    android:text="确定"
                    android:id="@+id/confirm_tv"
                    android:gravity="center"
                    android:layout_height="match_parent" 
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
        
        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content" 
            android:textColor="#171718"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:text="公司名称"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#8c8c8e"
            android:id="@+id/tv_company_name"
            android:text="赞空网络科技有限公司"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e5effb"
        android:layout_height="1dp"/>  
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
        
        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content" 
            android:textColor="#171718"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:text="工作时间"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#8c8c8e"
            android:id="@+id/tv_time"
            android:text="2017.8.6-20186"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e5effb"
        android:layout_height="1dp"/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
        
        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content" 
            android:textColor="#171718"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:text="部门/职位"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#8c8c8e"
            android:id="@+id/tv_job"
            android:text="Android开发工程师"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e5effb"
        android:layout_height="1dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:textColor="#171718"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:layout_marginTop="17dp"
            android:gravity="center_horizontal"
            android:id="@+id/tv1"
            android:layout_gravity="center_vertical"
            android:text="工作内容"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tv1"
            android:layout_marginTop="17dp"
            android:includeFontPadding="false"
            android:textColor="#8c8c8e"
            android:textSize="14sp"
            android:id="@+id/tv_context"
            android:layout_marginRight="14dp"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginBottom="17dp"
            android:text="圣诞放假斯洛伐克惊世毒妃打算离开放假司法局 副驾驶飞机司法所连接方式飞机上的飞机上的风景方式连接方式登录福建省放假李师傅就是放假圣诞放假是否就束带结发"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:background="#e5effb"
        android:layout_height="10dp"/>
</LinearLayout>
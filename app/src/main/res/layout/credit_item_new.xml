<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#e5effb"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_01"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#8c8c8e"
            android:id="@+id/time_tv"
            android:text="2018-11-28"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/background_radius"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/text"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                android:layout_marginTop="12dp"
                android:id="@+id/right_img"
                android:layout_marginLeft="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王大品"
                        android:layout_marginTop="20dp"
                        android:textColor="#171718"
                        android:id="@+id/name"
                        android:includeFontPadding="false"
                        android:layout_marginRight="4dp"
                        android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务费:40元"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:layout_alignLeft="@+id/name"
                    android:textSize="12sp"
                    android:id="@+id/reward"
                    android:textColor="#ef7318"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:textColor="#ef7318"
                        android:id="@+id/gratuity"
                        android:includeFontPadding="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="打赏金额:3.99"/>
                </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务类型:"
                android:textSize="14sp"
                android:layout_marginRight="4dp"
                android:includeFontPadding="false"
                android:textColor="#6f7072"
                android:layout_marginLeft="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跑腿"
                android:id="@+id/type"
                android:includeFontPadding="false"
                android:textColor="#6f7072"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间:"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:textColor="#6f7072"
                android:layout_marginLeft="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"
                android:textColor="#6f7072"
                android:id="@+id/time_start"
                android:includeFontPadding="false"
                android:layout_marginBottom="12dp"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#e5effb"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#171718"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:text="用户评价:"
                android:includeFontPadding="false"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_01"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="评价理由:"
                android:layout_marginLeft="12dp"
                android:textSize="15sp"
                android:includeFontPadding="false"
                android:textColor="#171718"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#6f7072"
                android:layout_marginRight="24dp"
                android:id="@+id/reason_tv"
                android:includeFontPadding="false"
                android:text=""
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
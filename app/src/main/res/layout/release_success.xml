<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#e5effb"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:orientation="vertical"
        android:background="@drawable/background_radius"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#171718"
                android:text="类型：去送物品"
                android:id="@+id/type_tv"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ef7318"
                    android:textSize="15sp"
                    android:text="服务费:"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ef7318"
                    android:textSize="15sp"
                    android:id="@+id/reward_tv"
                    android:text="￥20元（条件交换）"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="#171718"
            android:text="预约要求："
            android:layout_marginLeft="14dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="44.33dp"
            android:textColor="#6f7072"
            android:textSize="13sp"
            android:id="@+id/sex_tv"
            android:layout_marginTop="13dp"
            android:text="性别：男"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44.33dp"
            android:layout_marginTop="13dp"
            android:text="信用等级：4.0以上"
            android:textColor="#6f7072"
            android:id="@+id/credit_tv"
            android:layout_marginBottom="14dp"
            android:textSize="13sp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_totleLayout">
    <ScrollView
        android:background="@android:color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="2dp"
                    android:background="@android:color/holo_blue_light"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:textColor="#171718"
                    android:text="价格区间（元）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.example.zkapp_map.hkdialog.viwe.MyGridView
                android:id="@+id/gv_sieve_price"
                android:numColumns="3"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="2dp"
                    android:background="@android:color/holo_blue_light"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:textColor="#171718"
                    android:text="信用等级（分）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.example.zkapp_map.hkdialog.viwe.MyGridView
                android:id="@+id/gv_sieve_credit"
                android:numColumns="3"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_sieve_confirm"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:textColor="#e5effb"
            android:background="#5c9afd"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btn_sieve_reset"
            android:layout_weight="1"
            android:text="重置"
            android:gravity="center"
            android:textColor="#5c9afd"
            android:background="@drawable/type_btn_bg_blue"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <View
        android:layout_weight="4"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9D777777">
    </View>
</LinearLayout>
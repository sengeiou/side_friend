<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_err"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/icon_erray"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/title_name"
            android:text="类型"
            android:textColor="#171718"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:id="@+id/ll_confirm"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="确定"
                android:textSize="14sp"
                android:textColor="#5c9afd"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f5f5f5"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/tab_layout"
        android:layout_centerInParent="true"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingTop="-1dp"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabSelectedTextColor="#5c9afd"
        app:tabBackground="@drawable/tab_bg_sele"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="@color/text"
        app1:tabGravity="fill"
        app:tabMode="fixed"
        android:layout_height="48dp">
    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/viewPager_view"
        android:layout_height="380dp">

    </android.support.v4.view.ViewPager>
</LinearLayout>
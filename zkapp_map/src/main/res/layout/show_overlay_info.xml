<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:elevation="90dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:background="#e5effb"
        android:clipChildren="false"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="7dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51.33dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="6dp"
                        android:id="@+id/layout4"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="6dp"
                            android:layout_centerVertical="true"
                            android:text="李先生"
                            android:includeFontPadding="false"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/credit"
                            android:layout_width="70dp"
                            android:layout_height="14dp"
                            android:layout_toRightOf="@+id/nickname"
                            android:background="@drawable/textviews"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:text="信用度4.0"
                            android:includeFontPadding="false"
                            android:textColor="#4b80f4"
                            android:textSize="9sp" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/creditDegree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fskhfsjlkhf"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="22.66dp"
                        android:textColor="#ef7318"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22.66dp"
                        android:layout_alignParentRight="true"

                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="11.33dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2.66dp"
                            android:src="@drawable/loction_icon" />
                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="距离你2.2km"
                            android:textColor="#68696a"
                            android:textSize="11sp" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.33dp">
                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{跑腿}去送快递"
                            android:textColor="#343536"
                            android:includeFontPadding="false"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:id="@+id/layout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/type"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/start" />
                            <TextView
                                android:id="@+id/addressA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxEms="12"
                                android:singleLine="true"
                                android:text="始发地：金都路/都市路（路口）门卫处"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/end_danslayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/layout1"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/type"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="11dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/destination_icon" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="距你26km"
                                android:id="@+id/distanceA2B"
                                android:textColor="#68696a"
                                android:textSize="11sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout1"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/end_icon" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxEms="12"
                                android:id="@+id/addressB"
                                android:singleLine="true"
                                android:text="目的地：金都路/都市路（路口）人才大厦1101室"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/end_danslayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/layout1"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/end_danslayout"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="11dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/you_dens" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="距您26km"
                                android:includeFontPadding="false"
                                android:textColor="#68696a"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="#f2f7fc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:text="预约要求:"
                            android:textSize="14sp"
                            android:includeFontPadding="false"
                            android:id="@+id/tv1"
                            android:textColor="#171718"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_toRightOf="@+id/tv1"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:textColor="#171718"
                            android:id="@+id/tv_requirement"
                            android:includeFontPadding="false"
                            android:layout_marginLeft="4.33dp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/money_icon"
                            android:layout_width="12.33dp"
                            android:layout_height="12.33dp"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/money_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/bargaining"
                            android:includeFontPadding="false"
                            android:layout_toRightOf="@+id/money_icon"
                            android:text="悬赏金:125"
                            android:textColor="#ef7318"
                            android:textSize="14sp" />
                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/deli_btn">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="查看详情"
                                android:includeFontPadding="false"
                                android:textColor="#eaedf0" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24.33dp"
            android:elevation="58dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cat"
            app:riv_border_color="#ffffff"
            app:riv_border_width="3dp"
            app:riv_oval="true" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="姓名:"
            android:textColor="#171718"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/tv_01"
            android:background="@null"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="姓名与身份证保持一致" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#c2c2c2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="身份证:"
            android:textColor="#171718"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
           android:focusable="false"
            android:layout_toRightOf="@+id/tv_02"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="姓名与身份证保持一致" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#c2c2c2" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="38dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_id_card_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/id_card_front"
            app:riv_corner_radius="6dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_id_card_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/id_card_back"
            app:riv_corner_radius="6dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="40dp"
        android:id="@+id/tv_next"
        android:background="@drawable/bg_text"
        android:gravity="center"
        android:text="继续"
        android:textColor="#e5effb" />
    <TextView
        android:layout_width="wrap_content"
        android:text="该照片仅用于审核，我们将为您严格保密"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />
</LinearLayout>
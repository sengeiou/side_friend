<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pickView_allLinearLayout">

        <com.zankong.tool.zkapp.views.InnerListview
            android:id="@+id/pick_listView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:divider="@null"
            android:scrollbars="none" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/picker_text_relativeLayout">

            <TextView
                android:id="@+id/pick_topLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
              />

            <TextView
                android:id="@+id/pick_bottomLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
               />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>